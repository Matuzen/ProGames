@page "/produtos"
@inject IProdutoService produtoService

@if (erro)
{
    <ExibirErro MensagemErro="Ocorreu um erro ao carregar os produtos." />
}
else if (Produtos is null)
{
    <ExibirSpinner />
}
else
{
    <h3 class="mb-5">Produtos</h3>

    @if (Produtos.Any())
    {
        var produtosPorCategoria = from produto in Produtos
                                   group produto by new { produto.CategoriaId, produto.CategoriaNome } into grupo
                                   orderby grupo.Key.CategoriaNome
                                   select grupo;

        @foreach (var grupo in produtosPorCategoria)
        {
            <h4 class="mt-4">@grupo.Key.CategoriaNome</h4>
            <div class="row mt-3">
                <ExibirProdutos Produtos="grupo" />
            </div>
        }
    }
    else
    {
        <p>Nenhum produto encontrado.</p>
    }
}

@code {
    public IEnumerable<ProdutoDto>? Produtos { get; set; }
    private bool erro = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Produtos = await produtoService.GetItens();
        }
        catch (Exception ex)
        {
            erro = true;
            Console.WriteLine($"Erro ao carregar produtos: {ex.Message}");
        }
    }
}
